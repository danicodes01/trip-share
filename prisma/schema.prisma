
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Trip {
  id        String     @default(cuid()) @id
  slug      String@unique
  title     String
  image     String
  summary   String?
  description String
  location String
  author    String
}

